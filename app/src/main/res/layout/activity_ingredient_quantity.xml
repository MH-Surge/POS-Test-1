<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="ingredientQuantityVM" type="com.application.app.modules.ingredientquantity.data.viewmodel.IngredientQuantityVM"/>
    </data>
    <FrameLayout android:id="@+id/frameIngredientQuan"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <LinearLayout android:id="@+id/linearColumnclose"
            android:layout_gravity="top|center"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_23pxh"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_36pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowclose"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageClose"
                        android:layout_height="@dimen/_25pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_width="@dimen/_25pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_close_25x25"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_close_25x25"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtHowMuch"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginStart="@dimen/_99pxh"
                        android:layout_weight="0.84"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{ingredientQuantityVM.ingredientQuantityModel.txtHowMuch}"
                        style="@style/txtPoppinssemibold25" tools:text="@string/lbl_how_much"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <TextView android:gravity="end"
                android:id="@+id/txtDescription"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_43pxh"
                android:layout_marginStart="@dimen/_43pxh"
                android:layout_marginTop="@dimen/_27pxv"
                android:layout_width="match_parent"
                android:text="@{ingredientQuantityVM.ingredientQuantityModel.txtDescription}"
                style="@style/txtPoppinsregular18" tools:text="@string/msg_how_much_of_thi"/>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtNeedHelpClic"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_43pxh"
                android:layout_marginStart="@dimen/_43pxh"
                android:layout_marginTop="@dimen/_36pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{ingredientQuantityVM.ingredientQuantityModel.txtNeedHelpClic}"
                style="@style/txtPoppinsregular18" tools:text="@string/msg_need_help_clic"/>
            <FrameLayout android:id="@+id/frameStackgrams"
                android:layout_height="@dimen/_50pxv"
                android:layout_marginTop="@dimen/_35pxv" android:layout_width="@dimen/_382pxh">
                <LinearLayout android:id="@+id/linearColumngrams"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_1pxh"
                    android:layout_width="match_parent"
                    android:orientation="vertical" style="@style/groupStylewhite_6">
                    <TextView android:ellipsize="end"
                        android:gravity="start"
                        android:id="@+id/txtGrams"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_17pxv"
                        android:layout_marginEnd="@dimen/_58pxh"
                        android:layout_marginStart="@dimen/_58pxh"
                        android:layout_marginTop="@dimen/_18pxv"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{ingredientQuantityVM.ingredientQuantityModel.txtGrams}"
                        style="@style/txtPoppinsregular14_1" tools:text="@string/lbl_grams"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnKilograms"
                    android:layout_gravity="end"
                    android:layout_height="@dimen/_50pxv"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_width="@dimen/_192pxh"
                    android:paddingBottom="@dimen/_17pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_17pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_kilograms"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded_10" tools:text="@string/lbl_kilograms"/>
            </FrameLayout>
            <EditText
                android:background="@drawable/rectangle_border_gray_900_radius_6_1"
                android:ellipsize="end"
                android:hint="@string/lbl_3_grams"
                android:id="@+id/etWeight" android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_marginTop="@dimen/_25pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_14pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_19pxh"
                android:paddingTop="@dimen/_18pxv"
                android:singleLine="true"
                android:text="@={ingredientQuantityVM.ingredientQuantityModel.etWeightValue}"
                android:textColorHint="@color/gray_900"
                style="@style/etRoundedOutline_5" tools:ignore="Autofill"/>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnDoNotAdd"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_marginTop="@dimen/_50pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_17pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_17pxv"
                android:singleLine="true"
                android:text="@string/lbl_do_not_add"
                android:textAllCaps="false"
                style="@style/btnRoundedOutline_4" tools:text="@string/lbl_do_not_add"/>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnAdd"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_17pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_17pxv"
                android:singleLine="true" android:text="@string/lbl_add"
                android:textAllCaps="false"
                style="@style/btnSolidRoundedOutline_4" tools:text="@string/lbl_add"/>
        </LinearLayout>
    </FrameLayout>
</layout>
